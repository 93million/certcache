{
  "name": "certcache",
  "version": "1.4.0",
  "description": "TLS certificate server that generates, caches and deploys SSL/TLS certificates",
  "main": "index.js",
  "bin": "src/cli/cli.js",
  "scripts": {
    "cli": "node src/cli/cli.js",
    "clidev": "nodemon --inspect -- src/cli/cli.js",
    "lint": "eslint .",
    "sit": "jest -c sit/jest.config.js --rootDir sit",
    "start": "node src/cli/cli.js serve",
    "startdev": "nodemon --inspect src/cli/cli.js serve",
    "test": "jest --coverage"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fidm/x509": "^1.2.1",
    "client-authenticated-https": "git+https://deploy:zkBrVfQk7KicL7yx7mUy@gitlab.mcelderry.com/lib/client-authenticated-https.git#1.1.0",
    "debug": "^4.1.1",
    "md5": "^2.2.1",
    "node-rsa": "^1.0.5",
    "rimraf": "^2.6.3",
    "tar-stream": "^2.1.0",
    "uuid": "^3.3.2",
    "yaml": "^1.6.0",
    "yargs": "^15.1.0"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.0",
    "fs-extra": "^8.1.0",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.1",
    "nodemon": "^1.19.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint"
    ]
  }
}
