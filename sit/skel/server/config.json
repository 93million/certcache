{
  "client": {
    "host": "localhost",
    "port": 4433,
    "certDir": "certs",
    "syncInterval": 21600,
    "renewalDays": 30
  },
  "server": {
    "port": 4433,
    "auth": [
      {
        "domains": ["~.*\\.mcelderry.com"],
        "allow": ["dev", "client"]
      },
      {
        "domains": ["test.mcelderry.com"],
        "deny": ["dev"]
      }
    ],
    "backends": {
      "certbot": {
        "email": "tm_certbot@mcelderry.co.uk",
        "domains": ["~(.*\\.)?.ngrok.io$"]
      }
    }
  }
}
